{
    "name": "Amazon with LINKIT-II",
    "version": "0.2",
    "manifest_version": 2,

    "description": "KITLCにもあるかも！",
    "update_url": "https://raw.github.com/tknhs/AmaLin/master/AmaLin.chromeextension/updates.xml",

    "permissions": [
        "http://*/"
    ],

    "content_scripts": [
        {
            "matches": [
                "http://www.amazon.co.jp/*/dp/*",
                "http://www.amazon.co.jp/dp/*",
                "http://www.amazon.co.jp/gp/product/*"],
            "js": ["main.js"]
        }
    ]
}
